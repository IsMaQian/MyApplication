<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/Button01"
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:background="@android:color/transparent"
            android:padding="12dp"
            android:text=" "
            android:textColor="#696969" />

    </LinearLayout>

        <RelativeLayout
            android:id="@+id/RelativeLayout1"
            android:layout_width="match_parent"
            android:layout_height="292dp"
            android:layout_weight="0.89"
            android:orientation="vertical" >

            <Button
                android:id="@+id/button_DroneType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/button_WorkIndex"
                android:layout_below="@+id/button_WorkIndex"
                android:background="@android:color/transparent"
                android:text="机型设置"
                android:textColor="#696969" />

            <Button
                android:id="@+id/button_PID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/button_DroneType"
                android:layout_below="@+id/button_DroneType"
                android:background="@android:color/transparent"
                android:text="PID设置"
                android:textColor="#696969" />

        

            <Button
                android:id="@+id/button_IMUState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/button_PID"
                android:layout_centerHorizontal="true"
                android:background="@android:color/transparent"
                android:text="传感器状态"
                android:textColor="#696969" />

            <Button
                android:id="@+id/btn_select"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="26dp"
                android:background="@android:color/transparent"
                android:padding="12dp"
                android:text="连接"
                android:textColor="#696969" />

            <Button
                android:id="@+id/button_WorkIndex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_select"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:background="@android:color/transparent"
                android:text="作业参数"
                android:textColor="#696969" />

            <View
                android:id="@+id/View01"
                android:layout_width="180dp"
                android:layout_height="0.5dp"
                android:layout_alignLeft="@+id/btn_select"
                android:layout_below="@+id/button_WorkIndex"
                android:background="#F0909090" />

            <View
                android:id="@+id/View02"
                android:layout_width="180dp"
                android:layout_height="0.5dp"
                android:layout_alignLeft="@+id/btn_select"
                android:layout_below="@+id/button_DroneType"
                android:background="#F0909090" />

            <View
                android:id="@+id/view1"
                android:layout_width="180dp"
                android:layout_height="0.5dp"
                android:layout_alignLeft="@+id/btn_select"
                android:layout_below="@+id/button_IMUState"
                android:background="#F0909090" />

            <View
                android:id="@+id/View02"
                android:layout_width="180dp"
                android:layout_height="0.5dp"
                android:layout_alignLeft="@+id/btn_select"
                android:layout_alignTop="@+id/button_IMUState"
                android:background="#F0909090" />

            <View
                android:id="@+id/View03"
                android:layout_width="180dp"
                android:layout_height="0.5dp"
                android:layout_alignLeft="@+id/btn_select"
                android:layout_below="@+id/button_IMUState"
                android:background="#F0909090" />

        </RelativeLayout>

    <RelativeLayout
        android:id="@+id/RelativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/rssival"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text=" "
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/deviceName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginRight="64dp"
            android:layout_toLeftOf="@+id/rssival"
            android:text="@string/no_device"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/deviceLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="41dp"
            android:text="@string/device" />

    </RelativeLayout>

</LinearLayout>